import os
import time
import json
import subprocess

CONFIG_PATH = "sample_config.json"

json_config = ""
with open(CONFIG_PATH) as f:
    json_config = f.read()

config = json.loads(json_config)

triggerd = {}

def cpu_trigger(index, trigger, shell, interval):
    if not '%' in trigger:
        raise "triggerに%がセットされていません"
    print(int(trigger.split('%')[0]))
    subprocess.call(shell, shell=True)

def check(index, item):
    item_type = item['type']
    trigger = item['trigger']
    shell = item['shell']
    interval = item['interval']
    print(item_type, trigger, shell, interval)
    if item_type == 'cpu':
        cpu_trigger(index, trigger, shell, interval)
    else:
        "；；"
    


def loop():
    for index, item in enumerate(config):
        check(index, item)

for _ in range(2):
    loop()
    time.sleep(1)
